<div class="container">
    <div class="profile-card">
        <div class="profile-header">
            {{#if currentUser}}
            <h2>My Posts</h2>
            {{else}}
            <h2>Posts by {{username}}</h2>
            {{/if}}
        </div>
        {{#if currentUser}}
        <div class="newpost-card">
            <button class="newpost-btn" id="newpost-btn">New Post</button>
        </div>
        {{/if}}
    </div>
    
    {{#each posts}}
    <div class="post_card">
        <div class="post-header">
            <h2>
                <a href="/p/{{id}}">{{title}}</a>
            </h2>
        </div>
        <div class="post-details">
            <p>Posted: {{format_date date_created}}</p>
        </div>
        <div class="post-body">
            <p>{{post_preview body}}</p>
        </div>
        <div class="post-footer">
            {{#if ../currentUser}}
            {{!-- <a href="">Edit</a> --}}
            {{> post-options}}
            {{/if}}
        </div>
    {{/each}}
</div>

<script src="/js/dashboard.js"></script>
<script src="/js/deletePost.js"></script>